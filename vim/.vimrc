"-----------------------------------
" keymap
"-----------------------------------
inoremap <silent> jj <ESC>


"-----------------------------------
" setting
"-----------------------------------
set fenc=utf-8
set nobackup
set noswapfile
set autoread
set showcmd

"-----------------------------------
" view
"-----------------------------------
set number
set laststatus=2
set expandtab
set tabstop=2
set shiftwidth=2


"-----------------------------------
" search
"-----------------------------------
set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>